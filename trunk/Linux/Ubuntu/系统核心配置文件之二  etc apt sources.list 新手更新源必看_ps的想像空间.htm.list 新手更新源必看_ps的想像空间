var RelatedDocData = null, GetAndEval = false;
(function(){
	var xhr = BdAjax.getXHR();
	if(xhr == null){
		RelatedDocData = -1;
		return;
	}

	xhr.open("GET", "/sys/search?type=8&word=%CF%B5%CD%B3%BA%CB%D0%C4%C5%E4%D6%C3%CE%C4%BC%FE%D6%AE%B6%FE%20%20%20%2Fetc%2Fapt%2Fsources%2Elist%20%D0%C2%CA%D6%B8%FC%D0%C2%D4%B4%B1%D8%BF%B4&item=9a48ac739caa011a8601b04f&t=" + new Date().getTime(), true);
	xhr.onreadystatechange = function(){
		if(xhr.readyState == 4){
			if(xhr.status == 0 || xhr.status == 200){
				if(GetAndEval){
					eval(xhr.responseText);
				}else{
					RelatedDocData = xhr.responseText;
				}
			}
		}
	}
	xhr.send(null);
})();
