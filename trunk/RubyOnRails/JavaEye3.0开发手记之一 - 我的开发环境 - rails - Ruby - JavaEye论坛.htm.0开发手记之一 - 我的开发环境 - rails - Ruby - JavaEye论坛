            <A href="http://app.javaeye.com/links?user_favorite%5Btitle%5D=%E5%9B%9E%E5%A4%8D%3A+JavaEye3.0%E5%BC%80%E5%8F%91%E6%89%8B%E8%AE%B0%E4%B9%8B%E4%B8%80+-+%E6%88%91%E7%9A%84%E5%BC%80%E5%8F%91%E7%8E%AF%E5%A2%83&user_favorite%5Burl%5D=http%3A%2F%2Fwww.javaeye.com%2Fpost%2F356514" target="_blank" class="favorite">收藏</A>
            
            
          
        
